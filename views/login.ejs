<%- include('partials/header.ejs') %>
<main class="form-container">
    <h2>Login to Snack Shack</h2>
    <% if (error) { %>
        <p class="error-message"><%= error %></p>
    <% } %>
    <!-- VULNERABILITY: SQL Injection target in form submission -->
    <form method="POST" action="/login">
        <label for="username">Username (Vulnerable):</label>
        <input type="text" id="username" name="username" placeholder="Try: 'chintu' OR 1=1 --" required>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" placeholder="Any password works after SQLi" required>
        
        <button type="submit">Login</button>
    </form>
    <p class="small-text">New user? <a href="/register">Register here</a></p>
</main>
